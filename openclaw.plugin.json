{
    "id": "mr-krabs-crypto",
    "name": "Mr. Krabs Money Claw",
    "description": "Tracks Solana meme coins and roasts you for missing pumps.",
    "configSchema": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "watchedTokens": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "symbol": {
                            "type": "string"
                        },
                        "address": {
                            "type": "string"
                        },
                        "threshold": {
                            "type": "number",
                            "description": "The pump percentage to trigger an alert (e.g., 5)."
                        },
                        "targetPrice": {
                            "type": "number",
                            "description": "Take-profit price target."
                        },
                        "stopLoss": {
                            "type": "number",
                            "description": "Stop-loss price target."
                        }
                    },
                    "required": [
                        "symbol",
                        "address"
                    ]
                }
            },
            "alertChannel": {
                "type": "string",
                "default": "telegram"
            },
            "alertTo": {
                "type": "string"
            }
        }
    }
}